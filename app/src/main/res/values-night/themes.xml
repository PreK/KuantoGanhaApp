<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KuantoGanha" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/primaryDarkMode</item>
        <item name="colorPrimaryDark">@color/primaryDarkMode</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDarkMode</item>
        <item name="android:windowBackground">@color/windowBackgroundDarkMode</item>

        <!-- Estilo do botão -->
        <item name="buttonStyle">@style/BootstrapButton</item>
    </style>

    <!-- Estilo do botão ao estilo Bootstrap -->
    <style name="BootstrapButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>
